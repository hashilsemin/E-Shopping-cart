
    <section>
        <div class="container mt-5">
            <div class="row">
                {{#each products}}
                <div class="col-md-3 p-3">
                    <div class="card border-success" style="width: 15rem; height: 28rem">
                        <img src="/product-images/{{this._id}}.jpg" class="card-img-top mx-auto" style="width: 6rem; height: 9rem" alt="...">
                        <div class="card-body">
                            <hr>
                            <h5 class="card-name">{{this.Name}}</h5>
                            <p class="card-text">{{this.Description}}</p>
                            <p class="card-text">{{this.Price}} Rs</p>
                            <button onclick="addToCart('{{this._id}}')" class="btn btn-primary" >Add to cart</button>
                            <a href="/moreDetails/{{this._id}}" class="btn btn-secondary mt-2" >More details</a>
                        
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </section>
